<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimary"
        android:id="@+id/MainBody"
        android:tag="MainBody"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="Add a Dog"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/AddDogTV"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/AddDogTV"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="405dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/holo_orange_dark"
            android:id="@+id/AddImageBody"
            android:tag="AddImageBody">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/AddImageContainer"
                android:tag="AddImageContainer">

                <TextView
                    android:text="Choose Image From Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ImageFloatText" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="220dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_orange_dark"
            android:id="@+id/DogDetailsBody"
            android:tag="DogDetailsBody">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/DogDetailsContainer"
                android:tag="DogDetailsContainer">

                <TextView
                    android:text="Name:"
                    android:id="@+id/NameHeadingTV"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="7dp"
                    android:layout_width="35dp" />

                <TextView
                    android:text="Age:"
                    android:layout_width="35dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:id="@+id/AgeHeadingTV"
                    android:layout_alignBaseline="@+id/NameHeadingTV"
                    android:layout_alignBottom="@+id/NameHeadingTV"
                    android:layout_toEndOf="@+id/NameHeadingTV"
                    android:layout_marginStart="77dp"
                    android:layout_height="15dp" />

                <EditText
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:id="@+id/NameInsertET"
                    android:layout_height="33dp"
                    android:layout_width="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/NameHeadingTV"
                    android:hint="Enter Name" />

                <TextView
                    android:text="Breed:"
                    android:id="@+id/BreedHeadingTV"
                    android:layout_marginStart="53dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignBaseline="@+id/AgeHeadingTV"
                    android:layout_alignBottom="@+id/AgeHeadingTV"
                    android:layout_toEndOf="@+id/AgeHeadingTV" />

                <EditText
                    android:layout_width="55dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/AgeInsertET"
                    android:textStyle="italic"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_height="33dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/AgeHeadingTV"
                    android:layout_marginStart="25dp"
                    android:hint="Ent. Age" />

                <EditText
                    android:layout_width="75dp"
                    android:layout_height="33dp"
                    android:inputType="textPersonName"
                    android:textStyle="italic"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:ems="10"
                    android:id="@+id/BreedInsertET"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/BreedHeadingTV"
                    android:hint="Enter Breed" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_orange_dark"
            android:tag="DogCharBody"
            android:id="@+id/DogCharBody">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/DogCharContainer"
                android:tag="DogCharContainer">

                <TextView
                    android:text="Physical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:id="@+id/PhysicalCatTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:id="@+id/SocialCatTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="Behavioural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:id="@+id/BehaviourCatTV"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dropDown"
                    android:entries="@array/physical"
                    android:visibility="visible"
                    android:layout_below="@+id/PhysicalCatTV"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:text="Add Your Dog!"
            android:layout_height="wrap_content"
            android:id="@+id/AddDogBtn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_marginTop="5dp"
            android:layout_width="110dp" />

    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Info:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dogname_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dogage_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dogbreed_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dogcolor_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physical Attributes"
                android:layout_gravity="center"/>

          <Button
              android:layout_width="400dp"
              android:layout_height="100dp"
              android:layout_gravity="center"
              android:id="@+id/physocalAttrBtn"
              android:background="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Behaviour Attributes"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/behaviourAttrBtn"
                android:background="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Attributes"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/socialAttrBtn"
                android:background="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Attributes"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/medicalAttrBtn"
                android:background="@color/colorAccent"/>

        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
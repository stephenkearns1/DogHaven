<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        card_view:cardCornerRadius="4dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    card_view:srcCompat="@drawable/akita"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog Info:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogname_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogage_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogbreed_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogcolor_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physical Attributes"
                    android:layout_gravity="center"/>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/physocalAttrBtn"
                    android:text="Phyical Attributes"
                    android:background="@color/colorAccent"
                    android:visibility="visible"
                    android:elevation="3dp"
                    android:layout_marginBottom="4dp"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/behaviourAttrBtn"
                    android:text="Behaviour Attaibrutes"
                    android:background="@color/colorAccent"
                    android:layout_weight="0.35"
                    android:layout_marginBottom="4dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/socialAttrBtn"
                    android:text="Social Attributes"
                    android:background="@color/colorAccent"
                    android:layout_marginBottom="4dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/medicalAttrBtn"
                    android:text="Medical Attributes"
                    android:background="@color/colorAccent"
                    android:layout_marginBottom="4dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Delete"
                    android:id="@+id/deleteDog_btn"
                  android:background="@color/colorAccent"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

        </ScrollView>




    </android.support.v7.widget.CardView>

</LinearLayout>
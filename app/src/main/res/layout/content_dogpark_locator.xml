<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dogpark_locator"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.haven.dog.doghaven.Activities.DogparkLocatorActivity"
    tools:showIn="@layout/app_bar_dogpark_locator">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mapireland"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:padding="15dp"
        android:layout_marginTop="52dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/callbtn"
            android:drawableTop="@drawable/ic_phone_black_24dp"
            android:text="Call"
            android:background="@color/colorwhite"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/messagebtn"
            android:drawableTop="@drawable/ic_email_black_24dp"
            android:text="Message"
            android:background="@color/colorwhite"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_person_add_black_24dp"
            android:id="@+id/addcontactsbtn"
            android:text="Add"
            android:background="@color/colorwhite"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="Irish wolfhound kennel"
        android:textColor="@color/colorwhite"
        android:textSize="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_place_black_24dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="NCI, Mayor st, Dublin 1"
            android:layout_weight="0.07"
            android:background="@color/colorwhite" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_query_builder_black_24dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Open 9am - 6pm"
            android:layout_weight="0.07"
            android:background="@color/colorwhite" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_description_black_24dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Breeding since 96"
            android:layout_weight="0.07"
            android:background="@color/colorwhite" />

    </LinearLayout>



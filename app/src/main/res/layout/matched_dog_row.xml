<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPrimaryColor">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        android:layout_marginTop="50dp"
      >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"



                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    card_view:srcCompat="@drawable/akita"
                    android:scaleType="fitXY"
                    android:layout_marginTop="0dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorDivider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog Info:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogname_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogage_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogbreed_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dogcolor_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physical Attributes"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/physocalAttrBtn"
                        android:text="Phyical"
                        android:background="@color/colorAccent"
                        android:visibility="visible"
                        android:layout_marginTop="3dp"
                        android:elevation="3dp"
                        android:layout_marginRight="4dp"
                        />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/behaviourAttrBtn"
                        android:text="Behaviour"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="4dp"
                        />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/socialAttrBtn"
                        android:text="Social "
                        android:background="@color/colorAccent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="4dp"/>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/medicalAttrBtn"
                        android:text="Medical "
                        android:background="@color/colorAccent"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </ScrollView>


        </android.support.v7.widget.CardView>









</LinearLayout>
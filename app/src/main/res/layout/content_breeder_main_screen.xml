<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_breeder_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_breeder_main_screen"
    android:background="@color/colorAccent">









    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/bhomescreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bImageHolder"
        android:layout_height="170dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bImageHolder"
        android:layout_alignParentStart="true"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/bImageHolder"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_height="70dp">

            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/ic_search_black_24dp"
                android:background="@color/colorPrimary"
                android:layout_height="69dp" />

            <Button
                android:layout_width="280dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:padding="15dp"
                android:text="Company Profile"
                android:layout_weight="0.07"
                android:background="@color/colorwhite"
                android:id="@+id/CompanyProfileBtn"
                android:layout_height="69dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/bImageHolder"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_height="70dp">

            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/ic_search_black_24dp"
                android:background="@color/colorPrimary"
                android:layout_height="69dp" />

            <Button
                android:layout_width="280dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:padding="15dp"
                android:text="Stud Match"
                android:layout_weight="0.07"
                android:background="@color/colorwhite"
                android:id="@+id/studMatch"
                android:layout_height="69dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/bImageHolder"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_height="70dp">

            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/ic_search_black_24dp"
                android:background="@color/colorPrimary"
                android:layout_height="69dp" />

            <Button
                android:layout_width="280dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:padding="15dp"
                android:text="Add Dog"
                android:layout_weight="0.07"
                android:background="@color/colorwhite"
                android:id="@+id/addDog"
                android:layout_height="69dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/bImageHolder"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_height="70dp">

            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/ic_search_black_24dp"
                android:background="@color/colorPrimary"
                android:layout_height="69dp" />

            <Button
                android:layout_width="280dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:padding="15dp"
                android:text="Company Dogs"
                android:layout_weight="0.07"
                android:background="@color/colorwhite"
                android:id="@+id/CompanyDogsBtn"
                android:layout_height="69dp" />

        </LinearLayout>







    </LinearLayout>
    </ScrollView>


</RelativeLayout>




